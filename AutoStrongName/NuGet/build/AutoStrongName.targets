<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <AutoStrongNamePath Condition="$(AutoStrongNamePath) == '' Or $(AutoStrongNamePath) == '*Undefined*'">$(MSBuildThisFileDirectory)..\AutoStrongName.dll</AutoStrongNamePath>
  </PropertyGroup>

  <!-- Debug stuff -->
  <!--<UsingTask
      TaskName="SignDependencies"
      AssemblyFile="$(SolutionDir)\AutoStrongName\bin\Debug\AutoStrongName.exe.task" />-->
  <UsingTask
      TaskName="SignDependencies"
      AssemblyFile="$(AutoStrongNamePath)" />
  <Target
      Name="AutoStrongNameTarget"
      BeforeTargets="CoreCompile"
      >
    <SignDependencies ProjectPath="$(ProjectPath)" />
  </Target>
</Project>

