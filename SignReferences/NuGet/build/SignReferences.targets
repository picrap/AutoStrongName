<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <SignReferencesPath Condition="$(SignReferencesPath) == '' Or $(SignReferencesPath) == '*Undefined*'">$(MSBuildThisFileDirectory)..\SignReferences.exe</SignReferencesPath>
  </PropertyGroup>

  <UsingTask TaskName="SignReferencesTask" AssemblyFile="$(SignReferencesPath)" />
  <Target Name="SignReferencesTarget" BeforeTargets="CoreCompile">
    <SignReferencesTask ReferencePath="@(ReferencePath)" ReferenceCopyLocalPaths="@(ReferenceCopyLocalPaths)"
                        AssemblyOriginatorKeyFile="$(AssemblyOriginatorKeyFile)" SignAssembly="$(SignAssembly)" />
  </Target>
</Project>

